{% extends "admin/layout.njk" %}
{% block title %}Admin Signals{% endblock %}
{% block head %}
<link rel="stylesheet" href="/assets/admin/css/styles.css">
{% endblock %}
{% block content %}
<div class="container-fluid">
  <div class="mt-4 mb-3">
    <h2 class="mb-1">Signal Management Dashboard</h2>
    <small class="text-muted">Key metrics and products overview</small>
  </div>

  <!-- Product Cards Section -->
  <div class="row g-3 mb-4" id="productCardsRow">
    <div class="col-12">
      <h4 class="mb-3">Product Overview</h4>
    </div>
    {% for product in productStats %}
    <div class="col-md-6 col-lg-4">
      <div class="card h-100 product-card">
        <div class="card-body">
          <h5 class="card-title">{{ product.productName }}</h5>
          <div class="row g-2">
            <div class="col-6">
              <div class="text-muted small">Signals Given</div>
              <div class="h6 mb-0">{{ product.totalSignals }}</div>
            </div>
            <div class="col-6">
              <div class="text-muted small">Win/Loss Ratio</div>
              <div class="h6 mb-0">{{ product.winLossRatio }}%</div>
            </div>
            <div class="col-6">
              <div class="text-muted small">Profits</div>
              <div class="h6 mb-0 text-success">{{ product.profitSignals }}</div>
            </div>
            <div class="col-6">
              <div class="text-muted small">Losses</div>
              <div class="h6 mb-0 text-danger">{{ product.lossSignals }}</div>
            </div>
          </div>
          <div class="mt-3">
            <a href="/admin/signals/{{ product.productName }}" class="btn btn-outline-primary btn-sm w-100">Details</a>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>

  <!-- Overall Stats Row -->
  <div class="row g-3 mb-4" id="metricsRow">
    <div class="col-md-4">
      <div class="card">
        <div class="card-body d-flex justify-content-between align-items-center">
          <div>
            <div class="text-muted">Active Clients</div>
            <div class="h4 mb-0" id="metricClients">{{ activeClients or 0 }}</div>
          </div>
          <i class="fas fa-users text-primary fs-3"></i>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body d-flex justify-content-between align-items-center">
          <div>
            <div class="text-muted">Win/Loss</div>
            <div class="h4 mb-0" id="metricWinLoss">{{ winRate or 0 }}%</div>
          </div>
          <i class="fas fa-chart-line text-success fs-3"></i>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body d-flex justify-content-between align-items-center">
          <div>
            <div class="text-muted">Total Profit</div>
            <div class="h4 mb-0" id="metricProfit">Rs {{ (netProfit or 0).toFixed(2) }}</div>
          </div>
          <i class="fas fa-rupee-sign text-warning fs-3"></i>
        </div>
      </div>
    </div>
  </div>

  <!-- Watchlist Section -->
  <div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Watchlist</h5>
      <button class="btn btn-primary btn-sm" id="addWatchBtn"><i class="fas fa-plus me-1"></i>Add Watchlist Item</button>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0" id="watchlistTable">
          <thead>
            <tr>
              <th>Symbol</th>
              <th>Product</th>
              <th>Exchange</th>
              <th>Live Price</th>
              <th>Current Price</th>
              <th>Alert Price</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="watchlistBody">
            {% for item in watchlist %}
            <tr>
              {% set ex = item.exchange or '-' %}
              {% if ex == '-' or ex == '' %}
                {% if item.product and item.product|lower == 'crypto' %}
                  {% set ex = 'BINANCE' %}
                {% elif item.product and (item.product|lower == 'stocks' or item.product|lower == 'options') %}
                  {% set ex = 'NSE' %}
                {% elif item.product and (item.product|lower == 'forex' or item.product|lower == 'commodity') %}
                  {% set ex = 'OANDA' %}
                {% else %}
                  {% set ex = 'OANDA' %}
                {% endif %}
              {% endif %}
              <td>
                <a href="https://www.tradingview.com/chart/?symbol={{ ex }}:{{ item.stockName }}" target="_blank" rel="noopener"><strong>{{ item.stockName }}</strong></a>
              </td>
              <td>{{ item.product }}</td>
              <td>{{ item.exchange or '-' }}</td>
              <td>Rs {{ (item.currentPrice|float).toFixed(2) }}</td>
              <td>Rs {{ (item.alertPrice|float).toFixed(2) }}</td>
              <td>
                <div class="btn-group btn-group-sm">
                  <button class="btn btn-outline-success" data-action="buy" data-id="{{ item.id }}" data-stock="{{ item.stockName }}">Buy</button>
                  <button class="btn btn-outline-warning" data-action="sell" data-id="{{ item.id }}" data-stock="{{ item.stockName }}">Sell</button>
                  <button class="btn btn-outline-primary" data-action="edit" data-id="{{ item.id }}">Edit</button>
                  <button class="btn btn-outline-danger" data-action="delete" data-id="{{ item.id }}">Delete</button>
                </div>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Signals Section -->
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Signals</h5>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0" id="signalsTable">
          <thead>
            <tr>
              <th>ID</th>
              <th>Stock</th>
              <th>Exchange</th>
              <th>Live Price</th>
              <th>Type</th>
              <th>Entry</th>
              <th>Target</th>
              <th>Stop</th>
              <th>Entry Time</th>
              <th>Exit Price</th>
              <th>P&L</th>
              <th>Exit Time</th>
              <th>Status</th>
              <th>Created</th>
              <th>Updated</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="signalsBody">
            {% for signal in signals %}
            <tr>
              {% set ex2 = signal.exchange or '-' %}
              {% if ex2 == '-' or ex2 == '' %}
                {% set ex2 = 'NSE' %}
              {% endif %}
              <td>{{ signal.id }}</td>
              <td>
                <a href="https://www.tradingview.com/chart/?symbol={{ ex2 }}:{{ signal.symbol }}" target="_blank" rel="noopener">
                  <strong>{{ signal.symbol }}</strong>
                </a>
              </td>
              <td>{{ signal.exchange or '-' }}</td>
              <td class="live-price">Rs -</td>
              <td>{{ signal.signalType or signal.type }}</td>
              <td>Rs {{ signal.entry.toFixed(2) }}</td>
              <td>Rs {{ signal.target.toFixed(2) }}</td>
              <td>Rs {{ signal.stopLoss.toFixed(2) }}</td>
              <td>{% if signal.entryDateTime %}{{ signal.entryDateTime.toLocaleString('en-IN', { timeZone: 'Asia/Kolkata', hour12: false, day: '2-digit', month: '2-digit', year: '2-digit', hour: '2-digit', minute: '2-digit' }).replace(',', '') }}{% else %}-{% endif %}</td>
              <td>{% if signal.exitPrice %}Rs {{ signal.exitPrice.toFixed(2) }}{% else %}-{% endif %}</td>
              <td>
                {% if signal.profitLoss %}
                  {% if signal.profitLoss >= 0 %}
                    <span class="text-success">+Rs {{ signal.profitLoss.toFixed(2) }}</span>
                  {% else %}
                    <span class="text-danger">-Rs {{ (-signal.profitLoss).toFixed(2) }}</span>
                  {% endif %}
                {% else %}
                  -
                {% endif %}
              </td>
              <td>{% if signal.exitDateTime %}{{ signal.exitDateTime.toLocaleString('en-IN', { timeZone: 'Asia/Kolkata', hour12: false, day: '2-digit', month: '2-digit', year: '2-digit', hour: '2-digit', minute: '2-digit' }).replace(',', '') }}{% else %}-{% endif %}</td>
              <td><span class="badge {% if signal.status == 'IN_PROGRESS' %}bg-primary{% elif signal.status == 'PROFIT' %}bg-success{% elif signal.status == 'LOSS' %}bg-danger{% endif %}">{{ signal.status }}</span></td>
              <td>{{ signal.createdAt.toLocaleString('en-IN', { timeZone: 'Asia/Kolkata', hour12: false, day: '2-digit', month: '2-digit', year: '2-digit', hour: '2-digit', minute: '2-digit' }).replace(',', '') }}</td>
              <td>{{ signal.updatedAt.toLocaleString('en-IN', { timeZone: 'Asia/Kolkata', hour12: false, day: '2-digit', month: '2-digit', year: '2-digit', hour: '2-digit', minute: '2-digit' }).replace(',', '') }}</td>
              <td>
                <div class="btn-group btn-group-sm">
                  <button class="btn btn-outline-primary" data-saction="edit" data-sid="{{ signal.id }}">Edit</button>
                  <button class="btn btn-outline-secondary" data-saction="close" data-sid="{{ signal.id }}">Close</button>
                  <button class="btn btn-outline-danger" data-saction="delete" data-sid="{{ signal.id }}">Delete</button>
                </div>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

  <!-- Debug: Products count: {{ products.length }} -->
  <!-- Watchlist Modal -->
  <div class="modal fade" id="watchModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Add Watchlist Item</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="watchForm">
            <input type="hidden" id="watchId">
            <div class="mb-3">
              <label class="form-label" for="watchProduct">Product</label>
              <select class="form-select" id="watchProduct">
                <option value="">Select product</option>
                {% for p in products %}
                <option value="{{ p.name }}" data-category="{{ p.category }}">{{ p.name }}</option>
                {% endfor %}
              </select>
            </div>
            <div class="mb-3">
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="watchMode" id="modeStock" value="stock" checked>
                <label class="form-check-label" for="modeStock">A] Add Stock</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="watchMode" id="modeOption" value="option">
                <label class="form-check-label" for="modeOption">B] Add Option</label>
              </div>
            </div>
            <div id="watchStocksSection" class="mb-3" data-section="stock">
              <h6 class="mb-2">A] Add Stock</h6>
              <div class="row g-3 align-items-end">
                <div class="col-md-5">
                  <label class="form-label" for="watchStock">Add Stock</label>
                  <input class="form-control" id="watchStock" type="text" placeholder="e.g., RELIANCE">
                </div>
                <div class="col-md-5">
                  <label class="form-label" for="stockExchange">Exchange</label>
                  <input class="form-control" id="stockExchange" type="text" placeholder="e.g., NSE">
                </div>
              </div>
            </div>
            <div id="watchOptionsSection" class="mb-3" data-section="option">
              <h6 class="mb-2">B] Add Option</h6>
              <div class="row g-3 mb-3">
                <div class="col-md-5">
                  <label class="form-label" for="optionUnderlying">Add Option Stock</label>
                  <input class="form-control" id="optionUnderlying" type="text" placeholder="e.g., NIFTY">
                </div>
                <div class="col-md-5">
                  <label class="form-label" for="optionExchange">Exchange</label>
                  <input class="form-control" id="optionExchange" type="text" placeholder="e.g., NSE">
                </div>
              </div>
              <div class="row g-3">
                <div class="col-md-4">
                  <label class="form-label" for="optionExpiry">Expiry Date</label>
                  <input class="form-control" id="optionExpiry" type="date">
                </div>
                <div class="col-md-4">
                  <label class="form-label" for="optionAtmOffset">ATM +/-</label>
                  <input class="form-control" id="optionAtmOffset" type="number" step="1" value="0">
                </div>
                <div class="col-md-4">
                  <label class="form-label" for="optionCpType">Type</label>
                  <select class="form-select" id="optionCpType">
                    <option value="CALL">CALL</option>
                    <option value="PUT">PUT</option>
                  </select>
                </div>
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer d-flex justify-content-between">
          <div class="d-flex align-items-center gap-2">
            <button type="button" class="btn btn-add" id="watchSubmitBtn" aria-label="Add to watchlist" data-bs-toggle="tooltip" title="Add">
              <i class="fas fa-plus"></i>
              <span id="watchSubmitLabel">Add Stock</span>
            </button>
            <span id="watchSubmitSpinner" class="spinner-border spinner-border-sm text-primary d-none" role="status" aria-hidden="true"></span>
          </div>
          <div>
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Signal Creation Modal -->
  <div class="modal fade" id="signalCreateModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="signalCreateTitle">Create Signal</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="signalCreateForm">
          <div class="mb-3">
            <label class="form-label" for="signalStock">Stock Name</label>
            <input class="form-control" id="signalStock" type="text" readonly>
          </div>
          <input type="hidden" id="signalExchange">
          <div class="mb-3">
            <label class="form-label" for="signalTime">Time</label>
            <input class="form-control" id="signalTime" type="text" readonly>
          </div>
            <div class="mb-3">
              <label class="form-label" for="signalCurrentPrice">Current Price</label>
              <input class="form-control" id="signalCurrentPrice" type="number" step="0.01" readonly>
            </div>
            <div class="mb-3">
              <label class="form-label" for="signalTarget">Target <small class="text-muted"><span id="targetPctSign">+</span><span id="targetPctLabel">0.5</span>%</small></label>
              <div class="d-flex align-items-center gap-2">
                <input class="form-control" id="signalTarget" type="number" step="0.01" required>
                <input type="range" id="targetPct" min="0" max="3" step="0.25" value="0.5" style="width:140px">
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="signalStop">Stop Loss <small class="text-muted"><span id="stopPctSign">-</span><span id="stopPctLabel">0.5</span>%</small></label>
              <div class="d-flex align-items-center gap-2">
                <input class="form-control" id="signalStop" type="number" step="0.01" required>
                <input type="range" id="stopPct" min="0" max="3" step="0.25" value="0.5" style="width:140px">
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="signalNotes">Notes</label>
              <textarea class="form-control" id="signalNotes" rows="3" placeholder="Any analysis notes..."></textarea>
            </div>
            <input type="hidden" id="signalEntry">
            <input type="hidden" id="signalSide">
            <input type="hidden" id="signalProduct">
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" id="createSignalBtn">Create Signal</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Signal Close Modal -->
  <div class="modal fade" id="signalCloseModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Close Signal</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="signalCloseForm">
            <div class="mb-3">
              <label class="form-label" for="closeSignalStock">Stock Name</label>
              <input class="form-control" id="closeSignalStock" type="text" readonly>
            </div>
            <div class="mb-3">
              <label class="form-label" for="closeSignalType">Signal Type</label>
              <input class="form-control" id="closeSignalType" type="text" readonly>
            </div>
            <div class="mb-3">
              <label class="form-label" for="closeSignalEntry">Entry Price</label>
              <input class="form-control" id="closeSignalEntry" type="number" step="0.01" readonly>
            </div>
            <div class="mb-3">
              <label class="form-label" for="closeSignalTarget">Target Price</label>
              <input class="form-control" id="closeSignalTarget" type="number" step="0.01" readonly>
            </div>
            <div class="mb-3">
              <label class="form-label" for="closeExitPrice">Exit Price <span class="text-danger">*</span></label>
              <input class="form-control" id="closeExitPrice" type="number" step="0.01" required>
              <div class="form-text">Enter the actual market price at which the signal is being closed</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="closeSignalNotes">Closing Notes</label>
              <textarea class="form-control" id="closeSignalNotes" rows="2" placeholder="Reason for closing the signal..."></textarea>
            </div>
            <input type="hidden" id="closeSignalId">
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-warning" id="closeSignalBtn">Close Signal</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Signal Edit Modal -->
  <div class="modal fade" id="signalEditModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Edit Signal</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="signalEditForm">
            <div class="mb-3">
              <label class="form-label" for="editSignalStock">Stock Name</label>
              <input class="form-control" id="editSignalStock" type="text" readonly>
            </div>
            <div class="mb-3">
              <label class="form-label" for="editSignalType">Signal Type</label>
              <input class="form-control" id="editSignalType" type="text" readonly>
            </div>
            <div class="mb-3">
              <label class="form-label" for="editSignalEntry">Entry Price</label>
              <input class="form-control" id="editSignalEntry" type="number" step="0.01">
            </div>
            <div class="mb-3">
              <label class="form-label" for="editSignalTarget">Target Price</label>
              <input class="form-control" id="editSignalTarget" type="number" step="0.01">
            </div>
            <div class="mb-3">
              <label class="form-label" for="editSignalStop">Stop Loss</label>
              <input class="form-control" id="editSignalStop" type="number" step="0.01">
            </div>
            <div class="mb-3">
              <label class="form-label" for="editSignalNotes">Notes</label>
              <textarea class="form-control" id="editSignalNotes" rows="2" placeholder="Notes..."></textarea>
            </div>
            <input type="hidden" id="editSignalId">
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" id="saveEditSignalBtn">Save Changes</button>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
{% block scripts %}
<script src="/assets/admin/js/signals-dashboard.js"></script>
{% endblock %}
