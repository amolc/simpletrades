{% extends "admin/layout.njk" %}
{% block title %}Signal Detail - Admin{% endblock %}
{% block content %}
<div class="container-fluid">
  <div class="mt-4 mb-3 d-flex justify-content-between align-items-center">
    <div>
      <h2 class="mb-1">Signal Management: <span id="productTitle">{{ productName }}</span></h2>
      <small class="text-muted">Watchlist and signals for this product</small>
    </div>
    <a href="/admin/signals" class="btn btn-outline-secondary btn-sm"><i class="fas fa-arrow-left me-1"></i>Back</a>
  </div>

  <div class="card mb-3">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Watchlist</h5>
      <button class="btn btn-primary btn-sm" id="addWatchBtn"><i class="fas fa-plus me-1"></i>Add</button>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0" id="watchlistTable">
          <thead>
            <tr>
              <th>Stock</th>
              <th>Market</th>
              <th>Current Price</th>
              <th>Alert Price</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="watchlistBody">
            {% for item in watchlist %}
            <tr>
              <td>{{ item.stockName }}</td>
              <td>{{ item.market }}</td>
              <td>₹{{ item.currentPrice.toFixed(2) }}</td>
              <td>₹{{ item.alertPrice.toFixed(2) }}</td>
              <td>
                <div class="btn-group btn-group-sm">
                  <button class="btn btn-outline-success" data-action="buy" data-id="{{ item.id }}" data-stock="{{ item.stockName }}">Buy</button>
                  <button class="btn btn-outline-warning" data-action="sell" data-id="{{ item.id }}" data-stock="{{ item.stockName }}">Sell</button>
                  <button class="btn btn-outline-primary" data-action="edit" data-id="{{ item.id }}">Edit</button>
                  <button class="btn btn-outline-danger" data-action="delete" data-id="{{ item.id }}">Delete</button>
                </div>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Signals</h5>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0" id="signalsTable">
          <thead>
            <tr>
              <th>Stock</th>
              <th>Type</th>
              <th>Entry</th>
              <th>Target</th>
              <th>Stop</th>
              <th>Status</th>
              <th>Created</th>
              <th>Updated</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="signalsBody">
            {% for signal in signals %}
            <tr>
              <td>{{ signal.stock }}</td>
              <td>{{ signal.signalType or signal.type }}</td>
              <td>₹{{ signal.entry.toFixed(2) }}</td>
              <td>₹{{ signal.target.toFixed(2) }}</td>
              <td>₹{{ signal.stopLoss.toFixed(2) }}</td>
              <td><span class="badge {% if signal.status == 'ACTIVE' %}bg-success{% elif signal.status == 'CLOSED' %}bg-secondary{% else %}bg-warning{% endif %}">{{ signal.status }}</span></td>
              <td>{{ signal.createdAt|date("Y-m-d H:i:s") }}</td>
              <td>{{ signal.updatedAt|date("Y-m-d H:i:s") }}</td>
              <td>
                <div class="btn-group btn-group-sm">
                  <button class="btn btn-outline-primary" data-saction="activate" data-sid="{{ signal.id }}">Activate</button>
                  <button class="btn btn-outline-secondary" data-saction="close" data-sid="{{ signal.id }}">Close</button>
                  <button class="btn btn-outline-danger" data-saction="delete" data-sid="{{ signal.id }}">Delete</button>
                </div>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="modal fade" id="watchModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Add Watchlist Item</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="watchForm">
            <input type="hidden" id="watchId">
            <div class="mb-3">
              <label class="form-label" for="watchStock">Stock Name</label>
              <input class="form-control" id="watchStock" type="text" required>
            </div>
            <div class="mb-3">
              <label class="form-label" for="watchMarket">Market</label>
              <input class="form-control" id="watchMarket" type="text" required>
            </div>
            <div class="mb-3">
              <label class="form-label" for="watchCurrentPrice">Current Price</label>
              <input class="form-control" id="watchCurrentPrice" type="number" step="0.01" required>
            </div>
            <div class="mb-3">
              <label class="form-label" for="watchAlertPrice">Alert Price</label>
              <input class="form-control" id="watchAlertPrice" type="number" step="0.01" required>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" id="saveWatchBtn">Save</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="signalCreateModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="signalCreateTitle">Create Signal</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="signalCreateForm">
            <div class="mb-3">
              <label class="form-label" for="signalStock">Stock Name</label>
              <input class="form-control" id="signalStock" type="text" readonly>
            </div>
            <div class="mb-3">
              <label class="form-label" for="signalTime">Time</label>
              <input class="form-control" id="signalTime" type="text" readonly>
            </div>
            <div class="mb-3">
              <label class="form-label" for="signalCurrentPrice">Current Price</label>
              <input class="form-control" id="signalCurrentPrice" type="number" step="0.01" readonly>
            </div>
            <div class="mb-3">
              <label class="form-label" for="signalTarget">Target <small class="text-muted"><span id="targetPctSign">+</span><span id="targetPctLabel">0.5</span>%</small></label>
              <div class="d-flex align-items-center gap-2">
                <input class="form-control" id="signalTarget" type="number" step="0.01" required>
                <input type="range" id="targetPct" min="0" max="3" step="0.25" value="0.5" style="width:140px">
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="signalStop">Stop Loss <small class="text-muted"><span id="stopPctSign">-</span><span id="stopPctLabel">0.5</span>%</small></label>
              <div class="d-flex align-items-center gap-2">
                <input class="form-control" id="signalStop" type="number" step="0.01" required>
                <input type="range" id="stopPct" min="0" max="3" step="0.25" value="0.5" style="width:140px">
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="signalNotes">Notes</label>
              <textarea class="form-control" id="signalNotes" rows="3" placeholder="Any analysis notes..."></textarea>
            </div>
            <input type="hidden" id="signalEntry">
            <input type="hidden" id="signalSide">
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" id="createSignalBtn">Create Signal</button>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
{% block scripts %}
<script src="/assets/admin/js/signal-detail.js"></script>
{% endblock %}
