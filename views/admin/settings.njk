{% extends "admin/layout.njk" %}
{% block title %}Settings - Admin{% endblock %}
{% block content %}
<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
    <h2 class="mb-0">System Settings</h2>
    <div class="d-flex gap-2">
      <button class="btn btn-outline-secondary" id="resetSettingsBtn"><i class="fas fa-undo me-1"></i>Reset</button>
      <button class="btn btn-primary" id="saveSettingsBtn"><i class="fas fa-save me-1"></i>Save Changes</button>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <div class="card mb-3">
        <div class="card-header"><h5>Brand</h5></div>
        <div class="card-body">
          <div class="mb-3">
            <label class="form-label" for="websiteName">Website Name</label>
            <input class="form-control" id="websiteName" type="text">
          </div>
          <div class="mb-3">
            <label class="form-label" for="websiteUrl">Website URL</label>
            <input class="form-control" id="websiteUrl" type="url">
          </div>
          <div class="mb-3">
            <label class="form-label" for="analystName">Analyst Name</label>
            <input class="form-control" id="analystName" type="text">
          </div>
        </div>
      </div>

      <div class="card mb-3">
        <div class="card-header"><h5>Support</h5></div>
        <div class="card-body">
          <div class="mb-3">
            <label class="form-label" for="supportEmail">Support Email</label>
            <input class="form-control" id="supportEmail" type="email">
          </div>
          <div class="mb-3">
            <label class="form-label" for="supportPhone">Support Phone</label>
            <input class="form-control" id="supportPhone" type="text">
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="card mb-3">
        <div class="card-header"><h5>Payments</h5></div>
        <div class="card-body">
          <div class="mb-3">
            <label class="form-label" for="paymentUpiName">UPI Name</label>
            <input class="form-control" id="paymentUpiName" type="text">
          </div>
          <div class="mb-3">
            <label class="form-label" for="paymentUpiHandle">UPI Handle</label>
            <input class="form-control" id="paymentUpiHandle" type="text">
          </div>
        </div>
      </div>

      <div class="card mb-3">
        <div class="card-header"><h5>Integrations</h5></div>
        <div class="card-body">
          <div class="mb-3">
            <label class="form-label" for="telegramApiUrl">Telegram API URL</label>
            <input class="form-control" id="telegramApiUrl" type="url">
          </div>
          <div class="mb-3">
            <label class="form-label" for="whatsappApiUrl">WhatsApp API URL</label>
            <input class="form-control" id="whatsappApiUrl" type="url">
          </div>
        </div>
      </div>

      <div class="card mb-3">
        <div class="card-header"><h5>Policies</h5></div>
        <div class="card-body">
          <div class="mb-3">
            <label class="form-label" for="privacyPolicyUrl">Privacy Policy URL</label>
            <input class="form-control" id="privacyPolicyUrl" type="url">
          </div>
          <div class="mb-3">
            <label class="form-label" for="termsUrl">Terms URL</label>
            <input class="form-control" id="termsUrl" type="url">
          </div>
          <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="maintenanceMode">
            <label class="form-check-label" for="maintenanceMode">Maintenance Mode</label>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="settingsToast" class="toast position-fixed top-0 end-0 m-3" role="alert" style="z-index:1050"></div>
</div>
{% endblock %}
{% block scripts %}
<script src="/assets/admin/js/settings.js"></script>
{% endblock %}
