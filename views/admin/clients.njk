{% extends "admin/layout.njk" %}
{% block title %}Clients - Admin{% endblock %}
{% block head %}
<link rel="stylesheet" href="/assets/admin/css/styles-white.css">
{% endblock %}
{% block content %}
<header class="header-section">
  <div class="container">
    <div class="row align-items-center">
      <div class="col">
        <h1>Client Management</h1>
        <p class="text-muted mb-0">Professional client portfolio management</p>
      </div>
      <div class="col-auto">
        <div class="stats-card">
          <span class="number" id="totalClients">0</span>
          <span class="label">Total Clients</span>
        </div>
      </div>
    </div>
  </div>
</header>
<main class="container">
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Trading Segments</h5>
        </div>
        <div class="card-body">
          <div class="btn-group" role="group" aria-label="Trading segments">
            <button type="button" class="btn btn-outline-primary active" data-segment="all">All Clients</button>
            <button type="button" class="btn btn-outline-primary" data-segment="stocks">Stocks</button>
            <button type="button" class="btn btn-outline-primary" data-segment="fno">F&O</button>
            <button type="button" class="btn btn-outline-primary" data-segment="index">Index</button>
            <button type="button" class="btn btn-outline-primary" data-segment="commodity">Commodity</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Client Directory</h5>
          <div>
            <button class="btn btn-success btn-sm" id="addClientBtn">Add Client</button>
            <button class="btn btn-outline-secondary btn-sm" id="exportBtn">Export</button>
          </div>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover mb-0" id="clientsTable">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Phone Number</th>
                  <th>Email</th>
                  <th>Start Date</th>
                  <th>End Date</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="clientsBody"></tbody>
            </table>
          </div>
          <div id="emptyState" class="empty-state" style="display: none;">
            <h4>No clients found</h4>
            <p>Add your first client to get started.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<div class="modal fade" id="addClientModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add New Client</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="addClientForm">
          <div class="mb-3">
            <label for="clientName" class="form-label">Full Name</label>
            <input type="text" class="form-control" id="clientName" required>
          </div>
          <div class="mb-3">
            <label for="clientPhone" class="form-label">Phone Number</label>
            <input type="tel" class="form-control" id="clientPhone" required>
          </div>
          <div class="mb-3">
            <label for="clientEmail" class="form-label">Email Address</label>
            <input type="email" class="form-control" id="clientEmail" required>
          </div>
          <div class="mb-3">
            <label for="clientSegment" class="form-label">Trading Segment</label>
            <select class="form-select" id="clientSegment" required>
              <option value="">Select Segment</option>
              <option value="stocks">Stocks</option>
              <option value="fno">F&O</option>
              <option value="index">Index</option>
              <option value="commodity">Commodity</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="startDate" class="form-label">Start Date</label>
            <input type="date" class="form-control" id="startDate" required>
          </div>
          <div class="mb-3">
            <label for="endDate" class="form-label">End Date</label>
            <input type="date" class="form-control" id="endDate">
          </div>
          <div class="mb-3">
            <label for="clientStatus" class="form-label">Status</label>
            <select class="form-select" id="clientStatus" required>
              <option value="active">Active</option>
              <option value="inactive">Inactive</option>
              <option value="pending">Pending</option>
              <option value="suspended">Suspended</option>
            </select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="saveClientBtn">Add Client</button>
      </div>
    </div>
  </div>
</div>
{% endblock %}
{% block scripts %}
<script src="/assets/admin/js/clients.js"></script>
{% endblock %}
