{% extends "layout.njk" %}

{% block title %}SimpleIncome - India's First AI Signal Engine for Smarter Trading{% endblock %}

{% block content %}
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center min-vh-60">
                <div class="col-lg-12 text-center">
                    <div class="hero-content">
                        <h1 class="display-4 fw-bold text-primary mb-4">
                            India's First AI Signal Engine for Smarter Trading
                        </h1>
                        <p class="lead text-muted mb-4">
                         Get real-time, high-accuracy insights for stocks, options, and commodities
                          — built to help you earn simple, consistent income from the markets.
                        </p>
                        <div class="d-flex gap-3 justify-content-center">
                            <a href="/register" class="btn btn-primary btn-lg px-4">
                                <i class="fas fa-rocket me-2"></i>Start Trading
                            </a>
                            <a href="#services" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-arrow-down me-2"></i>Explore Services
                            </a>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </section>

    <!-- Services Section with Dynamic Products -->
    <section id="services" class="services-section py-5">
        <div class="container">
            <div class="row mb-5">
                <div class="col-12 text-center">
                    <h2 class="display-5 fw-bold text-dark mb-3">Our Trading Services</h2>
                    <p class="lead text-muted">Comprehensive trading solutions tailored for every investor</p>
                </div>
            </div>
            <div class="row g-4" id="services-container">
                {% for product in products %}
                <div class="col-lg-3 col-md-6">
                    <div class="service-card h-100">
                        <div class="service-icon">
                            <i class="fas fa-chart-bar"></i>
                        </div>
                        <h4 class="service-title">{{ product.name }}</h4>
                        <p class="service-description">
                            {{ product.description }}
                        </p>
                        <ul class="service-features">
                            {% for feature in product.keyFeatures %}
                            <li><i class="fas fa-check text-success me-2"></i>{{ feature|replace("• ", "") }}</li>
                            {% endfor %}
                        </ul>
                        <div class="pricing-info mb-3">
                            <small class="text-muted d-block mb-1">Plans available</small>
                        </div>
                        <a href="/product/{{ product.name | lower }}" class="btn btn-outline-primary w-100">Learn More</a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="about-section py-5 bg-light">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="about-content">
                        <h2 class="display-5 fw-bold text-dark mb-4">About SimpleIncome</h2>
                        <p class="lead text-muted mb-4">
                            We are India's first AI-powered signal engine designed to help traders make smarter, more profitable decisions. Our advanced algorithms analyze market data in real-time to provide accurate trading signals.
                        </p>
                        <div class="row mb-4">
                            <div class="col-md-6 mb-3">
                                <div class="feature-item d-flex align-items-center">
                                    <i class="fas fa-brain text-primary fs-4 me-3"></i>
                                    <div>
                                        <h6 class="fw-bold mb-1">AI-Powered</h6>
                                        <small class="text-muted">Advanced algorithms</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="feature-item d-flex align-items-center">
                                    <i class="fas fa-clock text-primary fs-4 me-3"></i>
                                    <div>
                                        <h6 class="fw-bold mb-1">Real-time</h6>
                                        <small class="text-muted">Live market analysis</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="feature-item d-flex align-items-center">
                                    <i class="fas fa-shield-alt text-primary fs-4 me-3"></i>
                                    <div>
                                        <h6 class="fw-bold mb-1">Secure</h6>
                                        <small class="text-muted">Bank-grade security</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="feature-item d-flex align-items-center">
                                    <i class="fas fa-users text-primary fs-4 me-3"></i>
                                    <div>
                                        <h6 class="fw-bold mb-1">Support</h6>
                                        <small class="text-muted">24/7 customer care</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a href="/register" class="btn btn-primary btn-lg">
                            <i class="fas fa-rocket me-2"></i>Get Started Today
                        </a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="about-image text-center">
                        <img src="https://via.placeholder.com/500x400/0066cc/ffffff?text=AI+Trading+Platform" alt="AI Trading Platform" class="img-fluid rounded-3 shadow-lg">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section id="testimonials" class="testimonials-section py-5">
        <div class="container">
            <div class="row mb-5">
                <div class="col-12 text-center">
                    <h2 class="display-5 fw-bold text-dark mb-3">What Our Users Say</h2>
                    <p class="lead text-muted">Join thousands of satisfied traders</p>
                </div>
            </div>
            <div class="row g-4">
                <div class="col-lg-4 col-md-6">
                    <div class="testimonial-card h-100">
                        <div class="testimonial-content">
                            <div class="stars mb-3">
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star text-warning"></i>
                            </div>
                            <p class="testimonial-text mb-3">
                                "SimpleIncome has transformed my trading. The AI signals are incredibly accurate and have helped me achieve consistent profits."
                            </p>
                            <div class="testimonial-author d-flex align-items-center">
                                <img src="https://via.placeholder.com/50x50/0066cc/ffffff?text=R" alt="Rahul Sharma" class="rounded-circle me-3">
                                <div>
                                    <h6 class="fw-bold mb-0">Rahul Sharma</h6>
                                    <small class="text-muted">Software Engineer</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="testimonial-card h-100">
                        <div class="testimonial-content">
                            <div class="stars mb-3">
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star text-warning"></i>
                            </div>
                            <p class="testimonial-text mb-3">
                                "The real-time signals and comprehensive analysis have made trading so much easier. I highly recommend SimpleIncome!"
                            </p>
                            <div class="testimonial-author d-flex align-items-center">
                                <img src="https://via.placeholder.com/50x50/28a745/ffffff?text=P" alt="Priya Patel" class="rounded-circle me-3">
                                <div>
                                    <h6 class="fw-bold mb-0">Priya Patel</h6>
                                    <small class="text-muted">Business Owner</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="testimonial-card h-100">
                        <div class="testimonial-content">
                            <div class="stars mb-3">
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star text-warning"></i>
                            </div>
                            <p class="testimonial-text mb-3">
                                "Best trading platform I've used. The AI signals are spot on and the customer support is excellent."
                            </p>
                            <div class="testimonial-author d-flex align-items-center">
                                <img src="https://via.placeholder.com/50x50/dc3545/ffffff?text=A" alt="Amit Kumar" class="rounded-circle me-3">
                                <div>
                                    <h6 class="fw-bold mb-0">Amit Kumar</h6>
                                    <small class="text-muted">Financial Analyst</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    
{% endblock %}
