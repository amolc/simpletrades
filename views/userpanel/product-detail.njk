{% extends "layout.njk" %}

{% block title %}{{ product.name }} Trading Signals - SimpleIncome{% endblock %}

{% block content %}
<!-- Hero Section -->
<section class="hero-section" style="padding-top: 100px;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12 text-center">
                <div class="py-4">
                    <h1 class="mb-3 section-title">{{ product.name }} Trading Signals</h1>
                    <p class="lead mb-4 text-muted">{{ product.description }}</p>
                    
                    <div class="row text-center mb-4">
                        {% for feature in product.keyFeatures %}
                        <div class="col-md-4">
                            <div class="mb-2">
                                <i class="fas fa-chart-line fa-2x text-primary"></i>
                            </div>
                            <h5 class="text-dark">{{ feature | replace("• ", "") | replace('"', '') | trim }}</h5>
                            <p class="small text-muted">Professional {{ product.name | lower }} trading guidance</p>
                        </div>
                        {% endfor %}
                    </div>
                    
                    <div class="pricing-cards mt-5">
                        <div class="row justify-content-center g-4">
                            {% for plan in plans %}
                            <div class="col-lg-3 col-md-6">
                                <div class="card pricing-card h-100 {% if loop.index == 2 %}featured{% endif %}">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">{{ plan.planName }}</h5>
                                        <div class="price">
                                            <span class="currency">Rs</span>
                                            <span class="amount">{{ plan.cost }}</span>
                                        </div>
                                        <p class="period">{{ plan.numberOfDays }} days</p>
                                        <button class="btn {% if loop.index == 2 %}btn-primary{% else %}btn-outline-primary{% endif %} btn-sm subscribe-btn"
                                                data-product-id="{{ product.id }}"
                                                data-plan-id="{{ plan.id }}"
                                                data-plan-name="{{ plan.planName }}"
                                                data-plan-days="{{ plan.numberOfDays }}">
                                            {% if plan.planName|lower == 'trial' %}Start Trial{% else %}Subscribe{% endif %}
                                        </button>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                    
                    <p class="small mt-3 mb-0 text-muted">✓ 7-day free trial ✓ Cancel anytime ✓ 30-day money back guarantee</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Target Audience Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="section-title mb-4">Perfect For</h2>
                <p class="lead">{{ product.targetAudience }}</p>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-title text-center mb-5">What You Get</h2>
                <div class="row">
                    {% for feature in product.keyFeatures %}
                    <div class="col-md-6 mb-4">
                        <div class="feature-card d-flex align-items-start">
                            <div class="feature-icon me-3">
                                <i class="fas fa-check-circle text-success"></i>
                            </div>
                            <div class="feature-content">
                                <h5>{{ feature | replace("• ", "") | trim }}</h5>
                                <p class="text-muted">Professional {{ product.name | lower }} trading feature to enhance your strategy</p>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-5 bg-primary text-white">
    <div class="container text-center">
        <h2 class="mb-4">Ready to Start Trading {{ product.name }}?</h2>
        <p class="lead mb-4">Join thousands of traders who trust our {{ product.name | lower }} signals</p>
        <button class="btn btn-light btn-lg px-5 subscribe-btn" 
                data-product-id="{{ product.id }}" 
                data-plan-name="monthly"
                data-plan-days="30">
            <i class="fas fa-rocket me-2"></i>Get Started Today
        </button>
    </div>
</section>

<style>
.pricing-cards {
    margin-top: 3rem;
}

.pricing-card {
    border: 1px solid #e9ecef;
    border-radius: 16px;
    transition: all 0.3s ease;
    position: relative;
    background: #fff;
    overflow: visible;
}

.pricing-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.1);
    border-color: transparent;
}

.pricing-card.featured {
    border: 2px solid #007bff;
    transform: scale(1.05);
    z-index: 1;
}

.pricing-card.featured::before {
    content: "MOST POPULAR";
    position: absolute;
    top: -14px;
    left: 50%;
    transform: translateX(-50%);
    background: #007bff;
    color: white;
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.5px;
    box-shadow: 0 4px 10px rgba(0,123,255,0.3);
    z-index: 2;
    white-space: nowrap;
}

.pricing-card .card-body {
    padding: 2rem 1.5rem;
}

.pricing-card .card-title {
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: #2c3e50;
}

.pricing-card .price {
    margin: 1.5rem 0;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    line-height: 1;
}

.pricing-card .currency {
    font-size: 1.5rem;
    font-weight: 500;
    margin-top: 6px;
    margin-right: 2px;
    color: #6c757d;
}

.pricing-card .amount {
    font-size: 2.5rem;
    font-weight: 800;
    color: #2c3e50;
    letter-spacing: -1px;
}

.pricing-card.featured .amount {
    color: #007bff;
}

.pricing-card .period {
    color: #6c757d;
    font-size: 0.9rem;
    margin-bottom: 2rem;
    font-weight: 500;
}

.feature-card {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    box-shadow: 0 2px 15px rgba(0,0,0,0.04);
    height: 100%;
    transition: transform 0.3s ease;
    border: 1px solid #f8f9fa;
}

.feature-card:hover {
    transform: translateY(-3px);
}

.feature-icon {
    font-size: 1.5rem;
}

.feature-content h5 {
    margin-bottom: 0.5rem;
    color: #333;
    font-weight: 600;
}

.section-title {
    font-weight: 800;
    color: #2c3e50;
    letter-spacing: -0.5px;
}

@media (max-width: 991.98px) {
    .pricing-card.featured {
        transform: scale(1);
        border-width: 2px; /* Keep border visible */
    }
    
    .pricing-cards {
        padding: 0 1rem;
    }
}

@media (max-width: 576px) {
    .pricing-card .amount {
        font-size: 2rem;
    }
}

/* Loading Animation Styles */
.loader-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    backdrop-filter: blur(5px);
}

.loader-content {
    background: white;
    padding: 3rem 2rem;
    border-radius: 20px;
    text-align: center;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    max-width: 400px;
    margin: 0 1rem;
    animation: loaderSlideIn 0.3s ease-out;
}

@keyframes loaderSlideIn {
    from {
        opacity: 0;
        transform: translateY(-30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.loader-spinner {
    width: 60px;
    height: 60px;
    border: 4px solid #f3f3f3;
    border-top: 4px solid #007bff;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto 1.5rem;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

.loader-title {
    color: #2c3e50;
    font-weight: 700;
    margin-bottom: 0.5rem;
    font-size: 1.25rem;
}

.loader-message {
    color: #6c757d;
    margin-bottom: 2rem;
    font-size: 0.95rem;
}

.loader-progress {
    background: #e9ecef;
    border-radius: 10px;
    height: 8px;
    overflow: hidden;
    margin-bottom: 1rem;
}

.progress-bar {
    background: linear-gradient(90deg, #007bff, #0056b3);
    height: 100%;
    width: 0%;
    transition: width 0.3s ease;
    border-radius: 10px;
    position: relative;
    overflow: hidden;
}

.progress-bar::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.4),
        transparent
    );
    animation: shimmer 1.5s infinite;
}

@keyframes shimmer {
    0% {
        transform: translateX(-100%);
    }
    100% {
        transform: translateX(100%);
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Create loading overlay
    const loadingOverlay = document.createElement('div');
    loadingOverlay.id = 'subscriptionLoader';
    loadingOverlay.className = 'loader-overlay';
    loadingOverlay.style.display = 'none';
    loadingOverlay.innerHTML = `
        <div class="loader-content">
            <div class="loader-spinner"></div>
            <h4 class="loader-title">Processing Your Subscription</h4>
            <p class="loader-message">Preparing your premium trading signals...</p>
            <div class="loader-progress">
                <div class="progress-bar"></div>
            </div>
        </div>
    `;
    document.body.appendChild(loadingOverlay);
    
    // Add click event listeners to all subscribe buttons
    const subscribeButtons = document.querySelectorAll('.subscribe-btn');
    
    subscribeButtons.forEach(button => {
        button.addEventListener('click', function() {
            const productId = this.getAttribute('data-product-id');
            const planId = this.getAttribute('data-plan-id');
            const planName = this.getAttribute('data-plan-name');
            const planDays = this.getAttribute('data-plan-days');

            // Check if user is logged in
            const authToken = localStorage.getItem('authToken');
            
            if (!authToken) {
              // User is not logged in, redirect to login without alert
              window.location.href = '/login?redirect=' + encodeURIComponent(window.location.href);
              return;
            }
            
            // User is logged in, proceed to confirmation page with loading animation
            showSubscriptionLoader();
        
            // Simulate processing time for premium feel
            setTimeout(async () => {
              hideSubscriptionLoader();
              await handleSubscription(productId, planId, planName, planDays);
            }, 2000 + Math.random() * 1000); // 2-3 seconds delay
        });
    });
    
    // Function to show subscription loader
    function showSubscriptionLoader() {
        const loader = document.getElementById('subscriptionLoader');
        loader.style.display = 'flex';
        
        // Animate progress bar
        const progressBar = loader.querySelector('.progress-bar');
        let progress = 0;
        const interval = setInterval(() => {
            progress += Math.random() * 15;
            if (progress >= 100) {
                progress = 100;
                clearInterval(interval);
            }
            progressBar.style.width = progress + '%';
        }, 200);
    }
    
    // Function to hide subscription loader
    function hideSubscriptionLoader() {
        const loader = document.getElementById('subscriptionLoader');
        loader.style.display = 'none';
    }
    
    // Function to handle subscription redirection
    async function handleSubscription(productId, planId, planName, planDays) {
        try {
            // Get auth token
            const authToken = localStorage.getItem('authToken');

            // Redirect to confirmation page with auth token
            if (authToken) {
                // Pass token as query parameter - the route will validate it
                window.location.href = `/subscription/confirm?productId=${productId}&planId=${planId}&token=${encodeURIComponent(authToken)}`;
            } else {
                // Store the intended action in sessionStorage for after login
                sessionStorage.setItem('pendingSubscription', JSON.stringify({
                    productId: productId,
                    planId: planId,
                    planName: planName,
                    planDays: planDays
                }));

                // Redirect to login
                window.location.href = '/login?redirect=' + encodeURIComponent(`/subscription/confirm?productId=${productId}&planId=${planId}`);
            }
        } catch (error) {
            console.error('Error handling subscription:', error);
            alert('Error processing subscription. Please try again.');
        }
    }
    
});
</script>
{% endblock %}
