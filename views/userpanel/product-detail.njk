{% extends "layout.njk" %}

{% block title %}{{ product.name }} Trading Signals - SimpleIncome{% endblock %}

{% block content %}
<!-- Hero Section -->
<section class="hero-section" style="padding-top: 100px;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12 text-center">
                <div class="py-4">
                    <h1 class="mb-3 section-title">{{ product.name }} Trading Signals</h1>
                    <p class="lead mb-4 text-muted">{{ product.description }}</p>
                    
                    <div class="row text-center mb-4">
                        {% for feature in product.keyFeatures %}
                        <div class="col-md-4">
                            <div class="mb-2">
                                <i class="fas fa-chart-line fa-2x text-primary"></i>
                            </div>
                            <h5 class="text-dark">{{ feature | replace("• ", "") | replace('"', '') | trim }}</h5>
                            <p class="small text-muted">Professional {{ product.name | lower }} trading guidance</p>
                        </div>
                        {% endfor %}
                    </div>
                    
                    <div class="pricing-cards mt-5">
                        <div class="row justify-content-center g-4">
                            <div class="col-lg-3 col-md-6">
                                <div class="card pricing-card h-100">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Trial</h5>
                                        <div class="price">
                                            <span class="currency">₹</span>
                                            <span class="amount">{{ pricingResolved.trial }}</span>
                                        </div>
                                        <p class="period">7 days</p>
                                        <button class="btn btn-outline-primary btn-sm subscribe-btn" 
                                                data-product-id="{{ product.id }}" 
                                                data-plan-name="trial"
                                                data-plan-days="7">
                                            Start Trial
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <div class="card pricing-card h-100 featured">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Monthly</h5>
                                        <div class="price">
                                            <span class="currency">₹</span>
                                            <span class="amount">{{ pricingResolved.monthly }}</span>
                                        </div>
                                        <p class="period">per month</p>
                                        <button class="btn btn-primary btn-sm subscribe-btn" 
                                                data-product-id="{{ product.id }}" 
                                                data-plan-name="monthly"
                                                data-plan-days="30">
                                            Subscribe Now
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <div class="card pricing-card h-100">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Quarterly</h5>
                                        <div class="price">
                                            <span class="currency">₹</span>
                                            <span class="amount">{{ pricingResolved.quarterly }}</span>
                                        </div>
                                        <p class="period">per quarter</p>
                                        <button class="btn btn-outline-primary btn-sm subscribe-btn" 
                                                data-product-id="{{ product.id }}" 
                                                data-plan-name="quarterly"
                                                data-plan-days="90">
                                            Save 33%
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <div class="card pricing-card h-100">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Yearly</h5>
                                        <div class="price">
                                            <span class="currency">₹</span>
                                            <span class="amount">{{ pricingResolved.yearly }}</span>
                                        </div>
                                        <p class="period">per year</p>
                                        <button class="btn btn-outline-primary btn-sm subscribe-btn" 
                                                data-product-id="{{ product.id }}" 
                                                data-plan-name="yearly"
                                                data-plan-days="365">
                                            Best Value
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <p class="small mt-3 mb-0 text-muted">✓ 7-day free trial ✓ Cancel anytime ✓ 30-day money back guarantee</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Target Audience Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="section-title mb-4">Perfect For</h2>
                <p class="lead">{{ product.targetAudience }}</p>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-title text-center mb-5">What You Get</h2>
                <div class="row">
                    {% for feature in product.keyFeatures %}
                    <div class="col-md-6 mb-4">
                        <div class="feature-card d-flex align-items-start">
                            <div class="feature-icon me-3">
                                <i class="fas fa-check-circle text-success"></i>
                            </div>
                            <div class="feature-content">
                                <h5>{{ feature | replace("• ", "") | trim }}</h5>
                                <p class="text-muted">Professional {{ product.name | lower }} trading feature to enhance your strategy</p>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-5 bg-primary text-white">
    <div class="container text-center">
        <h2 class="mb-4">Ready to Start Trading {{ product.name }}?</h2>
        <p class="lead mb-4">Join thousands of traders who trust our {{ product.name | lower }} signals</p>
        <button class="btn btn-light btn-lg px-5 subscribe-btn" 
                data-product-id="{{ product.id }}" 
                data-plan-name="monthly"
                data-plan-days="30">
            <i class="fas fa-rocket me-2"></i>Get Started Today
        </button>
    </div>
</section>

<style>
.pricing-cards {
    margin-top: 3rem;
}

.pricing-card {
    border: 1px solid #e9ecef;
    border-radius: 16px;
    transition: all 0.3s ease;
    position: relative;
    background: #fff;
    overflow: visible;
}

.pricing-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.1);
    border-color: transparent;
}

.pricing-card.featured {
    border: 2px solid #007bff;
    transform: scale(1.05);
    z-index: 1;
}

.pricing-card.featured::before {
    content: "MOST POPULAR";
    position: absolute;
    top: -14px;
    left: 50%;
    transform: translateX(-50%);
    background: #007bff;
    color: white;
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.5px;
    box-shadow: 0 4px 10px rgba(0,123,255,0.3);
    z-index: 2;
    white-space: nowrap;
}

.pricing-card .card-body {
    padding: 2rem 1.5rem;
}

.pricing-card .card-title {
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: #2c3e50;
}

.pricing-card .price {
    margin: 1.5rem 0;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    line-height: 1;
}

.pricing-card .currency {
    font-size: 1.5rem;
    font-weight: 500;
    margin-top: 6px;
    margin-right: 2px;
    color: #6c757d;
}

.pricing-card .amount {
    font-size: 2.5rem;
    font-weight: 800;
    color: #2c3e50;
    letter-spacing: -1px;
}

.pricing-card.featured .amount {
    color: #007bff;
}

.pricing-card .period {
    color: #6c757d;
    font-size: 0.9rem;
    margin-bottom: 2rem;
    font-weight: 500;
}

.feature-card {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    box-shadow: 0 2px 15px rgba(0,0,0,0.04);
    height: 100%;
    transition: transform 0.3s ease;
    border: 1px solid #f8f9fa;
}

.feature-card:hover {
    transform: translateY(-3px);
}

.feature-icon {
    font-size: 1.5rem;
}

.feature-content h5 {
    margin-bottom: 0.5rem;
    color: #333;
    font-weight: 600;
}

.section-title {
    font-weight: 800;
    color: #2c3e50;
    letter-spacing: -0.5px;
}

@media (max-width: 991.98px) {
    .pricing-card.featured {
        transform: scale(1);
        border-width: 2px; /* Keep border visible */
    }
    
    .pricing-cards {
        padding: 0 1rem;
    }
}

@media (max-width: 576px) {
    .pricing-card .amount {
        font-size: 2rem;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Add click event listeners to all subscribe buttons
    const subscribeButtons = document.querySelectorAll('.subscribe-btn');
    
    subscribeButtons.forEach(button => {
        button.addEventListener('click', function() {
            const productId = this.getAttribute('data-product-id');
            const planName = this.getAttribute('data-plan-name');
            const planDays = this.getAttribute('data-plan-days');
            
            // Check if user is logged in
            const authToken = localStorage.getItem('authToken');
            
            if (!authToken) {
                // User is not logged in, show login modal
                const loginModal = new bootstrap.Modal(document.getElementById('loginModal'));
                loginModal.show();
                
                // Store the intended action in sessionStorage for after login
                sessionStorage.setItem('pendingSubscription', JSON.stringify({
                    productId: productId,
                    planName: planName,
                    planDays: planDays
                }));
                
                return;
            }
            
            // User is logged in, proceed to confirmation page
            handleSubscription(productId, planName, planDays);
        });
    });
    
    // Function to handle subscription redirection
    function handleSubscription(productId, planName, planDays) {
        // Get the correct plan IDs based on the product and plan name
        // These are the actual database IDs for the Stocks product
        const planIds = {
            'trial': '20',     // Stocks Trial (ID: 20)
            'monthly': '1',    // Stocks Monthly (ID: 1)
            'quarterly': '2',  // Stocks Quarterly (ID: 2)
            'yearly': '3'      // Stocks Yearly (ID: 3)
        };
        
        const planId = planIds[planName] || '1'; // Default to monthly if not found
        
        // Get auth token
        const authToken = localStorage.getItem('authToken');
        
        // Redirect to confirmation page with auth token
        if (authToken) {
            window.location.href = `/subscription/confirm?productId=${productId}&planId=${planId}&authToken=${authToken}`;
        } else {
            // Store the intended action in sessionStorage for after login
            sessionStorage.setItem('pendingSubscription', JSON.stringify({
                productId: productId,
                planName: planName,
                planDays: planDays
            }));
            
            // Redirect to login
            window.location.href = '/login?redirect=' + encodeURIComponent(`/subscription/confirm?productId=${productId}&planId=${planId}`);
        }
    }
    
    // Check for pending subscription after login
    if (sessionStorage.getItem('pendingSubscription')) {
        const pending = JSON.parse(sessionStorage.getItem('pendingSubscription'));
        sessionStorage.removeItem('pendingSubscription');
        
        // Small delay to ensure page is fully loaded
        setTimeout(() => {
            handleSubscription(pending.productId, pending.planName, pending.planDays);
        }, 500);
    }
});
</script>
{% endblock %}
